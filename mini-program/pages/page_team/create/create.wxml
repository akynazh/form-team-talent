<back pageUrl="/pages/page_activity/detail/detail?a_id={{a_id}}&a_type={{a_type}}"  title="创建小组"></back>

<van-cell-group>
  <van-field model:value="{{t_name}}" label="小组名称" placeholder="请输入小组名称~" border="{{ false }}" />
  <van-field model:value="{{t_desc}}" label="小组描述" placeholder="请输入小组描述~" border="{{ false }}" />
  <van-cell title="人数限制">
    <van-stepper value="{{ t_total }}" bind:change="onTotalChange" min="2" integer/>
  </van-cell>
</van-cell-group>

<van-button plain type="primary" bindtap="createTeam" block>提交</van-button>