.bottom_container {
  border-radius: 15rpx;
  background-color: #2E8B57;
  position: fixed;
  bottom: 0;
  height: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.navigation_cell {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-style: solid;
}
.navigation_image {
  margin-top: 10rpx;
  height: 70rpx;
  width: 70rpx;
}
.navigation_text {
  font-size: 40rpx;
  font-weight: 545;
}